#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int h,x,y;
	    cin>>h>>x>>y;
	    int a,b;
	    a=h-y;
	    if(a%x==0){
	        b=a/x;
	        cout<<b+1<<endl;
	    }
	    else{
	        b=a/x;
	        cout<<b+2<<endl;
	    }
	}

}
