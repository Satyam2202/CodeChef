#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int s,x,y,z;
	    
	    cin>>s>>x>>y>>z;
	    int a,b;
	    a=s-(x+y);
	    b=z-a;
	    if(b<=0){
	        cout<<0<<endl;
	    }
	    else if(b<=max(x,y)){
	        cout<<1<<endl;
	    }
	    else{
	        cout<<2<<endl;
	    }
	   }
	}


