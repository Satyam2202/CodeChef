#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    int s=0;
	    for(int i=0; i<n; i++){
	        cin>>a[i];
	        if(a[i]==1){
	            s++;
	        }
	        
	    }
	    int x;
	    x=n-s;
	    if(n%2==1){
	        cout<<-1<<endl;
	    }
	    else{
	        cout<<abs(x-s)/2<<endl;
	    }
	    
	}

}
