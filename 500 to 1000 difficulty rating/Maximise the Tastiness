#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int a,b,c,d;
	    cin>>a>>b>>c>>d;
	    int s;
	    if(a>b){
	        if(c>d){
	            s=a+c;
	        }
	        else{
	            s=a+d;
	        }
	        
	    }
	    else{
	          if(c>d){
	              s=b+c;
	          }
	          else{
	              s=b+d;
	          }
	        }
	        cout<<s<<endl;
	}

}
