#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x;
	    cin>>n>>x;
	    if(n<x){
	        cout<<"0"<<endl;
	    }
	    else{
	    int a;
	    a=n-x;
	    
	    if(a%4==0){
	        cout<<a/4<<endl;
	    }
	    else{
	        a=a/4;
	        a++;
	        cout<<a<<endl;
	    }
	    }
	}

}
