#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x;
	    cin>>n>>x;
	    if(n<6){
	        cout<<x<<endl;
	    }
	    else if(n%6==0){
	        n=n/6;
	        cout<<n*x<<endl;
	    }
	    else{
	        n=n/6;
	        n=n+1;
	        cout<<n*x<<endl;
	    }
	}

}
