#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x;
	    cin>>n>>x;
	    if(x==0){
	        cout<<"NO"<<endl;
	    }
	    else{
	        if(n%2==0){
	            n=n/2;
	            if(x>=n){
	                cout<<"YES"<<endl;
	            }
	            else{
	                cout<<"NO"<<endl;
	            }
	        }
	        else{
	            n=n/2;
	            if(x>n){
	                cout<<"YES"<<endl;
	            }
	            else{
	                cout<<"NO"<<endl;
	            }
	        }
	    }
	}

}
